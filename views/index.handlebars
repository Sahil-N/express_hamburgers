<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#unless consumed}}
      {{> burgers/burger-block consumed=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#if consumed}}
      {{> burgers/burger-block consumed=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Consumed?</label><br>
    <input type="radio" name="consumed" value="1" checked> Consumed!<br>
    <input type="radio" name="consumed" value="0"> Undisturbed
  </div>

  <button type="submit">Add Burger</button>
</form>
